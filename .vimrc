" Tab settings
set smarttab
set shiftwidth=4
set tabstop=4

" filetype plugins
filetype plugin on
filetype indent on

set ai		" auto indent
set si		" smart indent
set wrap 	" wrap lines

" If a file changes, switch to read mde
set autoread

" normal backspace behavior
set backspace=eol,start,indent

" show matching brackets
set showmatch

" syntax highlighting
syntax enable
syntax on

" use utf-8 and en_US encoding
set encoding=utf8

set ffs=unix,dos,mac

filetype plugin indent on
syntax on
set nu 		" line numbers
set mouse=a " mouse behavior


